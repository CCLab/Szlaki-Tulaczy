{% import "macros/place.twig" as Places %}

<div class="map-container heading">
    <div class="map">
        <img src="/wp-content/themes/tulacze-theme/images/map.jpg">
        {% for phase in phases %}
            <div class="map--phase" data-phase="{{phase.slug}}">
                {% for place in places[phase.slug] %}
                    {{ Places.place(place.name, place.path, place.tul_size, place.tul_position_ns | ns_to_percent, place.tul_position_ew | ew_to_percent)}}
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</div>
