<head>
    <meta charset="{{site.charset}}" />
        <title>
            {% if wp_title %}
                {{ wp_title }} - {{ site.name }}
            {% else %}
                {{ site.name }}
            {% endif %}
        </title>
    <meta name="description" content="{{site.description}}">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="{{ theme.link }}/favicon.png">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,600,600i,900" rel="stylesheet">
    <link rel="icon" type="image/png" sizes="228x228" href="{{ img_dir }}/favicons/coast-228x228.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ img_dir }}/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ img_dir }}/favicons/favicon-16x16.png">
    <link rel="shortcut icon" href="{{ img_dir }}/favicons/favicon.ico">
    {{ function('wp_head') }}

</head>
